<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.aysesenses.hepsiburada_case_study.detail.DetailViewModel" />
        <import type="android.text.Html"/>
        <import type="android.view.View" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/description_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/collection_price_text"
                app:descriptionText="@{viewModel.selectedProperty.description ?? viewModel.selectedProperty.longDescription}"
                tools:text="description" />

            <ImageView
                android:id="@+id/main_photo_image"
                android:layout_width="0dp"
                android:layout_height="266dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:imageUrl="@{viewModel.selectedProperty.artworkUrl100}"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/collection_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="#de000000"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_photo_image"
                android:text="@{viewModel.selectedProperty.collectionName}"
                tools:text="Teen Titans Go!, Season 1" />

            <TextView
                android:id="@+id/collection_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#de000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/collection_name_text"
                android:text="@{viewModel.selectedProperty.collectionPrice.toString()}"
                tools:text="19.99$" />

            <TextView
                android:id="@+id/realese_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/collection_price_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/collection_price_text"
                app:layout_constraintTop_toTopOf="@+id/collection_price_text"
                app:realeseDate="@{viewModel.selectedProperty.releaseDate}"
                tools:text="2021-09-01T16:00:00Z" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>